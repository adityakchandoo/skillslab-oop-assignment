
@{
    ViewBag.Title = "Training";
    ViewBag.PageTag = "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Training.Name</h1>
                </div>
                <div class="col-sm-6">
                    <a href="/Admin/AddTrainingContent/@ViewBag.Training.TrainingId" role="button" class="btn btn-primary float-right">Add Content</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Timelime example  -->
            <div class="row">
                <div class="col-md-12">
                    <!-- The time line -->
                    <div class="timeline">

                        @foreach (var Content in ViewBag.Contents)
                        {

                            <!-- timeline time label -->
                            <div class="time-label">
                                <span class="bg-gray">@Content.TrainingContent.PostDate.ToString("dd MMM. yyyy")</span>
                            </div>
                            <!-- /.timeline-label -->
                            <!-- timeline item -->
                            <div>
                                <i class="fas fa-envelope bg-blue"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i> @Content.TrainingContent.PostDate.ToString("HH:mm:ss")</span>
                                    <h3 class="timeline-header"><a href="#">@Content.TrainingContent.Name</a></h3>

                                    <div class="timeline-body">
                                        @Content.TrainingContent.Description
                                    </div>
                                    <div class="timeline-footer">
                                        @foreach (var Attachments in Content.TrainingContentAttachments)
                                        {
                                            <a href="/File/@Attachments.SystemFilename/@Attachments.OriginalFilename/" class="btn btn-primary btn-sm">@Attachments.OriginalFilename</a>
                                        }
                                        <a class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <!-- END timeline item -->
                        }

                    </div>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.timeline -->
    </section>
</div>

